{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "lib": ["ES2021"],
    "rootDir": "./",
    "allowJs": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "build",
    "sourceMap": true,
    "skipLibCheck": true
  },
  "typeRoots": ["./node_modules/@types", "./types"]
}
